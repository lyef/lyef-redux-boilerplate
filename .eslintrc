{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.0"
        },
        "import/resolver": {
            "babel-module": {}
        }
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "id-length": 0,
        "react/jsx-indent": [
            2,
            4
        ],
        "react/jsx-first-prop-new-line": 0,
        "react/jsx-indent-props": [
            2,
            4
        ],
        "max-len": [
            "error", 120
        ],
       "react/jsx-filename-extension": 0,
       "consistent-return": 0,
       "no-param-reassign": 0,
       "react/jsx-curly-brace-presence": 0,
       "import/no-unresolved": 0,
       "import/extensions": ["error", "always", {
            "js": "never",
            "jsx": "never"
        }],
       "jsx-a11y/href-no-hash": "off",
       "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
    }
}
