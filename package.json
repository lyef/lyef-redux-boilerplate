{
  "name": "lyef-redux-boilerplate",
  "version": "0.0.1",
  "description": "An opionated structure to create projects using React, Redux and Webpack.",
  "scripts": {
    "start": "npm run dev",
    "dev": "node -r babel-register ./node_modules/.bin/webpack-dev-server --config ./webpack/dev.js --watch --colors",
    "build": "rimraf dist && NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config ./webpack/prod.js --progress --profile --colors",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --require tests/setup.js tests/specs/**/*.spec.js",
    "test:tdd": "npm test -- -w",
    "test:coverage": "NODE_ENV=test ./node_modules/.bin/nyc --reporter=html --reporter=text ./node_modules/.bin/mocha tests/setup.js tests/specs/**/*.spec.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "ci": "npm test && npm run lint",
    "prepush": "npm run ci"
  },
  "nyc": {
    "lines": 70,
    "check-coverage": true,
    "exclude": [
      "node_modules",
      "tests",
      "dist",
      "**/**/index.js"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.1",
    "babel-plugin-webpack-alias": "^2.1.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "babel-types": "^6.7.2",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.1",
    "classnames": "^2.2.3",
    "copy-to-clipboard": "^3.0.4",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "enzyme": "^2.1.0",
    "es6-promise": "^3.1.2",
    "eslint": "^3.0.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.10.2",
    "eslint-plugin-jsx-a11y": "^2.0.0",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "husky": "^0.11.9",
    "jsdom": "^3.1.2",
    "mocha": "^2.4.5",
    "nyc": "^8.1.0",
    "postcss-discard-duplicates": "^2.0.1",
    "postcss-discard-unused": "^2.2.1",
    "postcss-loader": "^0.9.1",
    "rimraf": "^2.5.3",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "webpack": "1.12.14",
    "webpack-dashboard": "0.1.8",
    "webpack-dev-middleware": "^1.7.0",
    "webpack-dev-server": "^1.15.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guilouro/react-redux-boilerplate.git"
  },
  "author": "Guilherme Louro",
  "private": true,
  "dependencies": {
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.0.1",
    "react-addons-test-utils": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-hot-loader": "^3.0.0-beta.3",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.6.1",
    "redux-promise-middleware": "^4.0.0",
    "redux-thunk": "^2.1.0",
    "store": "^1.3.20"
  }
}
